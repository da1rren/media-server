{
    dynamic_dns {
        provider cloudflare {env.CF_API_TOKEN}
        versions ipv4

        domains {
            loveand.coffee jellyfin2
        }
    }
}

jellyfin.loveand.coffee, jellyfin2.loveand.coffee {
    tls {
        resolvers 1.1.1.1
        dns cloudflare {env.CF_API_TOKEN}
    }

    reverse_proxy :8096
}

torrent.loveand.coffee {
    tls {
        resolvers 1.1.1.1
        dns cloudflare {env.CF_API_TOKEN}
    }

    reverse_proxy :8080
}

pi.loveand.coffee {
    tls {
        resolvers 1.1.1.1
        dns cloudflare {env.CF_API_TOKEN}
    }

    rewrite * /admin{uri}
    reverse_proxy pi.hole:80
}
